<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/animation_light_btn"
                android:layout_width="wrap_content"
                android:text="点亮动画"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/animation_start_btn"
                android:layout_width="wrap_content"
                android:text="五角星动画"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/animation_jump_btn"
                android:layout_width="wrap_content"
                android:text="弹簧动画"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/animation_bezier_btn"
                android:layout_width="wrap_content"
                android:text="飘心动画"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/circle_percent_btn"
                android:layout_width="wrap_content"
                android:text="进度百分比"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/head_loop_btn"
                android:layout_width="wrap_content"
                android:text="头像循环"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/move_view_btn"
                android:layout_width="wrap_content"
                android:text="moveView"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/sensor_move_img_btn"
                android:layout_width="wrap_content"
                android:text="图片跟随传感器移动"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/pingfen_view_btn"
                android:layout_width="wrap_content"
                android:text="平分View"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/loadview_view_btn"
                android:layout_width="wrap_content"
                android:text="加载动画"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/bezier_view_btn"
                android:layout_width="wrap_content"
                android:text="bezier曲线实例"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/view_point_scale_btn"
                android:layout_width="wrap_content"
                android:text="view为瞄点收起动画"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/recyclerView_hor_show"
                android:layout_width="wrap_content"
                android:text="RecyclerView横向一屏幕显示4个"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>