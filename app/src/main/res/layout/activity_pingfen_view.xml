<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/root_fl"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#FF0000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/label_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/label_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一起看片"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/root_fl2"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#00FF00"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/label_bg2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/label_img2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/label_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一起看片2"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/root_fl3"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="3dp"
        android:background="#0000FF"
        android:layout_marginRight="3dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/label_bg3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/label_img3"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/label_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一起看片3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/root_fl4"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#FF00FF"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/label_bg4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/label_img4"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/label_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一起看片4"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                />
        </LinearLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/iv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_height="wrap_content" />
</LinearLayout>