<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/than_heart_view"
        android:visibility="gone"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/than_heart_bg_ll"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_thanheart_nickName"
                android:textColor="#4A4A4A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="你给谁比了个心" />

            <TextView
                android:id="@+id/tv_thanheart_tips"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:text="互相比心可以成为好友" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/than_heart_left_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="27dp"
                android:visibility="gone"
                 />

            <LinearLayout
                android:id="@+id/than_heart_center_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_heart_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_handlfet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         />

                    <ImageView
                        android:id="@+id/iv_handright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:id="@+id/iv_hand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                         />
                </FrameLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/than_heart_right_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>