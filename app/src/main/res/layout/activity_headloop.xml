<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            >

            <ImageView
                android:id="@+id/match_head_new2"
                android:layout_width="80dp"
                android:layout_gravity="right|center"
                android:visibility="invisible"
                android:layout_marginRight="70dp"
                android:background="@drawable/bg_circle_solide_white"
                android:padding="1dp"
                android:layout_height="80dp" />
            <ImageView
                android:id="@+id/match_head_new"
                android:layout_width="80dp"
                android:layout_gravity="right|center"
                android:visibility="invisible"
                android:background="@drawable/bg_circle_solide_white"
                android:padding="1dp"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/match_head_left"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="1dp"
                    android:background="@drawable/bg_circle_solide_white"
                    android:visibility="invisible"
                    android:layout_gravity="center" />
                <ImageView
                    android:id="@+id/match_head_center"
                    android:layout_marginLeft="-20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="1dp"
                    android:visibility="invisible"
                    android:background="@drawable/bg_circle_solide_white"
                    android:layout_gravity="center" />
                <ImageView
                    android:id="@+id/match_head_right"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="-20dp"
                    android:visibility="invisible"
                    android:padding="1dp"
                    android:background="@drawable/bg_circle_solide_white"
                    android:layout_gravity="center" />
            </LinearLayout>

            <ImageView
                android:id="@+id/fake_center_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="1dp"
                android:background="@drawable/bg_circle_solide_white"
                android:visibility="invisible"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/match_people_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="1dp"
                android:background="@drawable/bg_circle_solide_white"
                android:visibility="gone"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/matchmovie_nick_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在匹配"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/matchmovie_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="缘, 妙不可言"
            android:textColor="#80FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>